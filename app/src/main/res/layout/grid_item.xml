<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="0dp"
    android:elevation="@dimen/cardview_default_elevation"
    android:clickable="true">
    <!-- Bottom View Start-->
    <LinearLayout
        android:animateLayoutChanges="true"
        android:id="@+id/bottom_wrapper"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:background="@drawable/node_background_dark"
        android:clipToPadding="false"
        android:elevation="@dimen/cardview_default_elevation"
        android:orientation="vertical">


        <!--<View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:paddingRight="1dp"
            android:background="@drawable/gradient"/>-->

        <com.kvajpoj.homie.components.WebcamImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/handle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/ic_reorder_24dp"/>

        <ImageView
            android:id="@+id/delete"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="0.5"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/ic_trash_24dp"/>


        <ImageView
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/ic_mode_edit_24dp"/>

        <!--<View
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:paddingRight="1dp"
            android:rotation="180"
            android:background="@drawable/gradient"/>-->


        <!--What you want to show-->
    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:animateLayoutChanges="true"
        android:elevation="18dp">
        <!--What you want to show in SurfaceView-->

        <FrameLayout
            android:id="@+id/nodeHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="@drawable/node_background"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/snapshot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                tools:visibility="invisible"
                tools:src="@drawable/image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:paddingStart="7dp">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        tools:text="spalnica"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                    <LinearLayout
                        android:id="@+id/batteryDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="2dp">

                        <ImageView
                            android:id="@+id/imgBattery"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="1dp"
                            android:rotation="90"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_battery_full_14dp"
                            tools:visibility="visible"/>

                        <TextView
                            android:id="@+id/txtBatteryPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="5dp"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            tools:text="100%"/>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgOffline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="2dp"
                        android:paddingStart="7dp"
                        android:paddingTop="2dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_cloud_off_black_14dp"
                        tools:visibility="visible"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/value"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="40sp"
                        tools:text="21.3"/>

                    <TextView
                        android:id="@+id/unit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:paddingTop="16dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"

                        tools:text="Â°C"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/itemupdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="22:22"/>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>


    <!-- Surface View End -->
</com.daimajia.swipe.SwipeLayout>

