<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="0.5dp"
                android:color="@color/colorPrimaryDark" />

            <solid android:color="#00FFFFFF" />

            <padding
                android:bottom="5dp"
                android:left="0dp"
                android:right="0dp"
                android:top="10dp" />
            <margin
                android:left="7dp"/>

        </shape>
    </item>
</layer-list>